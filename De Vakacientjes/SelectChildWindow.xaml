<Window x:Class="De_Vakacientjes.SelectChildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:De_Vakacientjes"
        mc:Ignorable="d"
        Title="Selecteer kind" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Label x:Name="lblChild" Content="Kind niet gevonden" HorizontalAlignment="Left" Margin="24,24,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbChild" HorizontalAlignment="Left" Height="34" Margin="24,76,0,0" VerticalAlignment="Top" Width="546"/>
        <Button x:Name="btnAddChild" Content="Toevoegen..." HorizontalAlignment="Left" Height="34" Margin="588,76,0,0" VerticalAlignment="Top" Width="71" Click="BtnAddChild_Click"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="270,272,0,0" VerticalAlignment="Top" Width="75" Click="BtnOK_Click"/>
        <Button x:Name="btnIgnore" Content="Overslaan" HorizontalAlignment="Left" Margin="372,272,0,0" VerticalAlignment="Top" Width="75" Click="BtnIgnore_Click"/>
        <Button x:Name="btnAbor" Content="Afbreken" HorizontalAlignment="Left" Margin="469,272,0,0" VerticalAlignment="Top" Width="75" Click="BtnAbor_Click"/>
    </Grid>
</Window>
