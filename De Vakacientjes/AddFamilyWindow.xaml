<Window x:Class="De_Vakacientjes.AddFamilyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:De_Vakacientjes"
        mc:Ignorable="d"
        Title="Voeg familie toe" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Naam" HorizontalAlignment="Left" Margin="62,57,0,0" VerticalAlignment="Top"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="62,105,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="26" Margin="151,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="353"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="26" Margin="151,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="353"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="270,272,0,0" VerticalAlignment="Top" Width="75" Click="BtnOK_Click"/>
        <Button x:Name="btnCancel" Content="Annuleren" HorizontalAlignment="Left" Margin="372,272,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
